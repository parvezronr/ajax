<p id="notice"><%= notice %></p>

<h1>Listing Employes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id = 'employes'>
    <%= render @employes  %>
  </tbody>
</table>

<br>


<%= link_to 'New Employe', '#new_employe', data: { toggle: 'modal' }, class: 'btn btn-primary' %>
    <div class="modal fade" id="new_employe">
      <%= simple_form_for Employe.new, remote: true do |f| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">New Employe</h4>
          </div>
          <div class="modal-body">
            <div class="form-inputs">
              <%= f.input :name %>
              <%= f.input :email %>
              <%= f.input :age %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.button :submit, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
